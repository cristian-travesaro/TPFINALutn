<div class="container" style="margin-top: 50px;">
  <!-- Fila 1 -->
  <div class="row">
    <div class="col text-end">
      <p>Hola, {{ persona }}
        <a class="btn btn-danger" href="/admin/login/logout">
          Cerrar sesión <i class="fas fa-sign-out-alt"></i>
        </a>
      </p>
    </div>
  </div>
  <!-- Fin Fila 1 -->

  <!-- Fila 2 -->
  <div class="row">
    <div class="col-7">
      <h3>Listado de Novedades</h3>
    </div>
    <div class="col-5 text-end">
      <a class="btn btn-success" href="/admin/novedades/agregar">
        <i class="fas fa-plus" aria-hidden="true"></i> Nuevo
      </a>
    </div>
  </div>
  <!-- Fin Fila 2 -->

  <!-- Fila 3 -->
  <div class="row">
    <div class="col">
      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}

      {{#if novedades.length}}
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Imagen</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td>{{{imagen}}}</td>
              <td class="text-end">
                <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}">
                  <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                </a>
                <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}">
                  <i class="fas fa-trash" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{else}}
        <p>No hay novedades disponibles en este momento.</p>
      {{/if}}
    </div>
  </div>
  <!-- Fin Fila 3 -->
</div>
